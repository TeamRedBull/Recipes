<Window x:Class="Recipes.KeywordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KeywordWindow" Height="305.6" Width="300" Background="#FFECD6A6" WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,2,72">

        <Label Content="Search Terms:" HorizontalAlignment="Left" Height="27" Margin="16,33,0,0" VerticalAlignment="Top" Width="87"/>
        <TextBox x:Name="SearchTextBox" AcceptsTab="True" Height="109" Margin="103,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168"/>
        <Label Content="Please separate search terms with TABS " HorizontalAlignment="Left" Height="27" Margin="16,161,0,0" VerticalAlignment="Top" Width="255"/>
        <Button x:Name="OkButton" Content="OK" HorizontalAlignment="Left" Height="25" Margin="52,214,0,-53" VerticalAlignment="Top" Width="75" Click="OkButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Height="25" Margin="172,214,0,-53" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>

    </Grid>
</Window>
